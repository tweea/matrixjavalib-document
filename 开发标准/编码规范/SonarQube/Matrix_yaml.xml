<?xml version='1.0' encoding='UTF-8'?>
<profile>
    <name>Matrix</name>
    <language>yaml</language>
    <rules>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>AnchorsCheck</key>
            <type>BUG</type>
            <priority>MAJOR</priority>
            <parameters>
                <parameter>
                    <key>forbid-unused-anchors</key>
                    <value>false</value>
                </parameter>
                <parameter>
                    <key>forbid-undeclared-aliases</key>
                    <value>true</value>
                </parameter>
                <parameter>
                    <key>forbid-duplicated-anchors</key>
                    <value>false</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>BracesCheck</key>
            <type>CODE_SMELL</type>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>forbid</key>
                    <value>false</value>
                </parameter>
                <parameter>
                    <key>max-spaces-inside</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>max-spaces-inside-empty</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>min-spaces-inside</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>min-spaces-inside-empty</key>
                    <value>0</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>BracketsCheck</key>
            <type>CODE_SMELL</type>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>forbid</key>
                    <value>false</value>
                </parameter>
                <parameter>
                    <key>max-spaces-inside</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>max-spaces-inside-empty</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>min-spaces-inside</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>min-spaces-inside-empty</key>
                    <value>0</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>ColonsCheck</key>
            <type>CODE_SMELL</type>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>max-spaces-after</key>
                    <value>1</value>
                </parameter>
                <parameter>
                    <key>max-spaces-before</key>
                    <value>0</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>CommasCheck</key>
            <type>CODE_SMELL</type>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>max-spaces-after</key>
                    <value>1</value>
                </parameter>
                <parameter>
                    <key>max-spaces-before</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>min-spaces-after</key>
                    <value>1</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>CommentsCheck</key>
            <type>CODE_SMELL</type>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>ignore-shebangs</key>
                    <value>false</value>
                </parameter>
                <parameter>
                    <key>min-spaces-from-content</key>
                    <value>1</value>
                </parameter>
                <parameter>
                    <key>require-starting-space</key>
                    <value>true</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>CommentsIndentationCheck</key>
            <type>CODE_SMELL</type>
            <priority>MINOR</priority>
            <parameters />
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>DocumentEndCheck</key>
            <type>CODE_SMELL</type>
            <priority>MAJOR</priority>
            <parameters>
                <parameter>
                    <key>present</key>
                    <value>true</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>DocumentStartCheck</key>
            <type>CODE_SMELL</type>
            <priority>MAJOR</priority>
            <parameters>
                <parameter>
                    <key>present</key>
                    <value>true</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>EmptyLinesCheck</key>
            <type>CODE_SMELL</type>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>max</key>
                    <value>1</value>
                </parameter>
                <parameter>
                    <key>max-end</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>max-start</key>
                    <value>0</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>EmptyValuesCheck</key>
            <type>CODE_SMELL</type>
            <priority>MAJOR</priority>
            <parameters>
                <parameter>
                    <key>forbid-in-block-mappings</key>
                    <value>true</value>
                </parameter>
                <parameter>
                    <key>forbid-in-block-sequences</key>
                    <value>true</value>
                </parameter>
                <parameter>
                    <key>forbid-in-flow-mappings</key>
                    <value>true</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>HyphensCheck</key>
            <type>CODE_SMELL</type>
            <priority>MINOR</priority>
            <parameters>
                <parameter>
                    <key>check-scalars</key>
                    <value>false</value>
                </parameter>
                <parameter>
                    <key>max-spaces-after</key>
                    <value>1</value>
                </parameter>
                <parameter>
                    <key>min-spaces-after</key>
                    <value>-1</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>IndentationCheck</key>
            <type>CODE_SMELL</type>
            <priority>MINOR</priority>
            <parameters>
                <parameter>
                    <key>check-multi-line-strings</key>
                    <value>false</value>
                </parameter>
                <parameter>
                    <key>indent-sequences</key>
                    <value>false</value>
                </parameter>
                <parameter>
                    <key>spaces</key>
                    <value>2</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>KeyDuplicatesCheck</key>
            <type>CODE_SMELL</type>
            <priority>MAJOR</priority>
            <parameters />
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>NewLineAtEndOfFileCheck</key>
            <type>CODE_SMELL</type>
            <priority>MINOR</priority>
            <parameters />
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>NewLinesCheck</key>
            <type>CODE_SMELL</type>
            <priority>MINOR</priority>
            <parameters>
                <parameter>
                    <key>type</key>
                    <value>unix</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>OctalValuesCheck</key>
            <type>CODE_SMELL</type>
            <priority>MAJOR</priority>
            <parameters>
                <parameter>
                    <key>forbid-explicit-octal</key>
                    <value>true</value>
                </parameter>
                <parameter>
                    <key>forbid-implicit-octal</key>
                    <value>true</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>ParsingErrorCheck</key>
            <type>CODE_SMELL</type>
            <priority>BLOCKER</priority>
            <parameters />
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>TrailingSpacesCheck</key>
            <type>CODE_SMELL</type>
            <priority>MINOR</priority>
            <parameters />
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>TruthyCheck</key>
            <type>CODE_SMELL</type>
            <priority>MINOR</priority>
            <parameters>
                <parameter>
                    <key>allowed-values</key>
                    <value>true, false</value>
                </parameter>
                <parameter>
                    <key>check-keys</key>
                    <value>true</value>
                </parameter>
            </parameters>
        </rule>
    </rules>
</profile>
